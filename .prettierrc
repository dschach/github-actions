{
	"trailingComma": "none",
	"singleQuote": true,
	"tabWidth": 2,
	"printWidth": 150,
	"useTabs": true,
	"bracketSpacing": true,
	"bracketSameLine": true,
	"overrides": [
		{
			"files": "*.{yml,yaml}",
			"options": { "tabWidth": 2, "useTabs": false, "singleQuote": true }
		},
		{ "files": "*.json", "options": { "printWidth": 80 } },
		{
			"files": "*.json5",
			"options": {
				"printWidth": 80,
				"parser": "json5",
				"quoteProps": "preserve",
				"singleQuote": false
			}
		},
		{
			"files": ".prettierrc",
			"options": { "parser": "json", "printWidth": 80 }
		}
	]
}
